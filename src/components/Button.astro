---
const {href, img="baby.gif"} = Astro.props;
---

<a href={href} class="rainbow">
    <img src={img} alt="">
    <slot />
</a>

<style lang="scss">
    a{
        background-color: rgba(0,0,0,0.1);
        color: white;
        width: fit-content;
        height: fit-content;
        padding: .5em;
        margin: .2em;
        width: 8em;
        text-align: center;
        border-radius: .1em;
        transition: background-color .1s ease;
        text-decoration: none;
        display: flex;
        flex-direction: column;
        align-items: center;
        justify-content: space-around;
        img{
            width: 5em;
        }

        &:hover{
            background-color: rgba(0,0,0,0.3);
        }
    }
</style>

