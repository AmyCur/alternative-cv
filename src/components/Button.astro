---
const {href} = Astro.props;
---

<a href={href}>
   <slot />
</a>

<style lang="scss">
    a{
        text-decoration: none;
        color: white;
        background-color: #3A495Caa;
        transition: all .16s ease;
        backdrop-filter: blur(.1vw);
        border-radius: .4vw;
        font-size: 2.5vw;

        padding: {
            left: 1vw;
            right: 1vw;
            top: 1vh;
            bottom: 1vh;
        };

        &:hover{
            transition: all .1s ease;
            animation-name: HoverColour;
            animation-duration: .5s;
            animation-iteration-count:  infinite;
            animation-timing-function: linear;
            
            cursor: pointer;
            background-color: #485a72aa;
        }
            
    }
</style>
