---
import RandomText from "../components/RandomText.astro";
import Tooltip from "../components/Tooltip.astro";
import Layout from "./Layout.astro";
---

<Layout title="Home">
    <div class="main-chunk">
        <div class="inner-chunk">
            <slot />
        </div>
    </div>
</Layout>

<style lang="scss">
    .main-chunk {
        $curve-radius: 0.3em;
        width: 60em;
        display: flex;
        justify-content: center;
        background-color: rgba(0, 0, 0, 0.1);
        border: 1px solid white;
        border-radius: $curve-radius $curve-radius $curve-radius $curve-radius;

        .inner-chunk {
            margin-top: 1em;
            margin-bottom: 3    em;
            width: 80%;
        }
    }

    a {
        text-decoration: none;
        color: white;
        transition: all 0.3s ease;

        &:hover {
            color: #8f8f8f;
        }
    }
</style>
