---
import "../styles/global.scss";
import "../styles/consts.scss";
import Button from "../components/Button.astro";
const { title = "Base Title" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<script
			src="https://kit.fontawesome.com/e4b9b41e06.js"
			crossorigin="anonymous"></script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="content">
			<div id="box">
				<div id="side-bar">
					<div id="buttons">
						<Button href="/">Homeslop</Button> 
						<Button href="/about-me">About Me</Button> 
						<Button href="/gallery">Gallery</Button> 
						<Button href="/retro">Super Retro Zone</Button> 
					</div>
					<div id="other">
						<img src="/baby.gif" alt="">
					</div>
					 
				</div>
				<div id="main-box">
					<slot />
				</div>
			</div>
		</div>
	</body>
</html>

<style lang="scss">
	html,
	body {
		margin: 0;
		width: 100%;
		background-image: url("https://i.pinimg.com/originals/fc/01/fc/fc01fcf41d53c4cab99e05c2dcaf848f.gif");
	}
	#content {
		$curve-radius: 1em;

		display: flex;
		justify-content: center;
		align-items: center;

		#box {
			display: flex;
			align-items: center;
			flex-direction: column;
			height: 100vh;
			width: 60em;

			// & > * {
			// 	display: flex;
			// 	flex-direction: column;
			// 	text-align: center;
			// 	justify-content: space-around;
			// }

			#side-bar {
				
				display: flex;
				justify-content: space-around;
        		backdrop-filter: blur(5px);
			
				margin-top: 2em;
				margin-bottom: 2em;
				width: 100%;
				min-height: 15vh;
				background-color: rgba(0, 0, 0, 0.1);
				border-radius: $curve-radius;
				border: .1em solid white;

				#buttons{
					display: flex;
					justify-content: space-around;
					align-items: center;

					
				}

				#other{
					display: flex;
					justify-content: center;
					align-items: center;
					img{
						width: 5em;
					}
				}
			}

			#main-box {
				display: grid;
				grid-template-columns: auto auto;
				
				.chunk {
					display: flex;
					justify-content: center;
					align-items: center;

					.inner-chunk {
						display: flex;
						justify-content: center;
						align-items: center;
						background-color: rgba(0, 0, 0, 0.1);
						border-radius: $curve-radius $curve-radius $curve-radius $curve-radius;
					}
				}
			}
		}
	}
</style>
