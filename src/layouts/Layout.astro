---
import "../styles/global.scss";
import "../styles/consts.scss";
import Button from "../components/Button.astro";
const { title = "Base Title" } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<script
			src="https://kit.fontawesome.com/e4b9b41e06.js"
			crossorigin="anonymous"></script>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/public/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body>
		<div id="content">
			<div id="box">
				<div id="side-bar">
					 <Button href="/">Homeslop</Button> 
				</div>
				<div id="main-box">
					<slot />
				</div>
			</div>
		</div>
	</body>
</html>

<style lang="scss">
	html,
	body {
		margin: 0;
		width: 100%;
		background-image: url("https://i.pinimg.com/originals/fc/01/fc/fc01fcf41d53c4cab99e05c2dcaf848f.gif");
	}
	#content {
		$curve-radius: 1em;

		display: flex;
		justify-content: center;
		align-items: center;

		#box {
			display: flex;
			justify-content: space-around;
			align-items: center;
			height: 100vh;
			width: 60vw;

			& > * {
				height: 80%;
				display: flex;
				flex-direction: column;
				text-align: center;
				justify-content: space-around;
			}

			#side-bar {
				width: 15vw;
				background-color: rgba(0, 0, 0, 0.1);
				border-radius: $curve-radius;
				border: .1em solid white;
				display: flex;
				flex-direction: column;
				justify-content: space-around;
				align-items: center;
			}

			#main-box {
				min-width: 40vw;

				display: grid;
				grid-template-columns: auto auto;

				.chunk {
					display: flex;
					justify-content: center;
					align-items: center;

					.inner-chunk {
						display: flex;
						justify-content: center;
						align-items: center;
						width: 18vw;
						background-color: rgba(0, 0, 0, 0.1);
						height: 18vw;
						border-radius: $curve-radius $curve-radius $curve-radius $curve-radius;
					}
				}
			}
		}
	}
</style>
